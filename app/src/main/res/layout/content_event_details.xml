<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.csikjsce.csi_kjsceofficial.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/Event_imageview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#000"
                android:elevation="2dp"
                android:paddingBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/handover" />
            <LinearLayout
                android:orientation="vertical"
                style="@style/text_preview"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/eventhead_textview"
                    style="@style/text_preview"
                    android:paddingTop="8dp"
                    android:text="This an example"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/eventdate_textview"
                    style="@style/date_view"
                    android:gravity="right"
                    android:padding="2dp"
                    android:text="12/7/2017" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:drawable="@drawable/custom_textview"
                    android:layout_gravity="right"
                    android:textSize="12dp"
                    android:text="FE"/>

                <TextView
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:text="Workshop"/>

                <TextView
                    android:id="@+id/eventdetails_textview"
                    style="@style/text_preview"
                    android:text="@string/holdertext" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
