<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.csikjsce.csi_kjsceofficial.EventDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/event_details_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/event_details_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            app:collapsedTitleTextAppearance="@color/fui_transparent"
            android:fitsSystemWindows="true">
            <ImageView
                android:id="@+id/Event_imageview"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_event_pic"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/event_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@color/fui_transparent"
                app:menu="@menu/activity_eventdetail_menu"
                app:layout_collapseMode="pin">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_detail_scrollview"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:layout_margin="16dp"
                android:fadingEdgeLength="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/event_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/saira_condensed_semibold"
                        android:text="Event Title"
                        android:textSize="@dimen/titleLargeText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/audience_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/tag_background"
                            android:fontFamily="@font/saira_condensed_semibold"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:text="FE"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/smallText"
                            android:textStyle="bold" />
                        <android.support.v4.widget.Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/category_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/tag_background"
                            android:fontFamily="@font/saira_condensed_semibold"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:text="workshop"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/smallText"
                            android:textStyle="bold" />
                        <android.support.v4.widget.Space
                            android:layout_width="16dp"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/event_date_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/saira_condensed_regular"
                            android:gravity="end"
                            android:text="12/07/2017"
                            android:textSize="@dimen/regularText" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/eventdetails_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/saira_condensed_light"
                        android:text="@string/holdertext"
                        android:textSize="@dimen/bodyText" />
                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_space" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/saira_condensed_semibold"
                android:text="@string/share"
                android:textAllCaps="true"
                android:textSize="@dimen/titleText"
                android:textStyle="bold" />
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/regular_space" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/whatsapp_share"
                    android:layout_width="@dimen/large_icon"
                    android:layout_height="@dimen/large_icon"
                    android:src="@drawable/ic_whatsapp" />
                <android.support.v4.widget.Space
                    android:layout_width="@dimen/small_space"
                    android:layout_height="0dp" />
                <ImageView
                    android:id="@+id/instagram_share"
                    android:layout_width="@dimen/large_icon"
                    android:layout_height="@dimen/large_icon"
                    android:src="@drawable/ic_instagram"/>
                <android.support.v4.widget.Space
                    android:layout_width="@dimen/small_space"
                    android:layout_height="0dp" />
                <ImageView
                    android:id="@+id/facebook_share"
                    android:layout_width="@dimen/large_icon"
                    android:layout_height="@dimen/large_icon"
                    android:src="@drawable/ic_facebook"/>
                <android.support.v4.widget.Space
                    android:layout_width="@dimen/small_space"
                    android:layout_height="0dp" />
                <ImageView
                    android:id="@+id/general_share"
                    android:layout_width="@dimen/large_icon"
                    android:layout_height="@dimen/large_icon"
                    android:src="@drawable/ic_share"/>
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_space" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="onClick"
        android:src="@drawable/fab_ic_register"
        app:backgroundTint="@android:color/white"
        app:elevation="16dp"
        app:layout_anchor="@id/event_detail_scrollview"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
