<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="@drawable/shape"
    android:elevation="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/member_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteY="36dp"
        android:src="@drawable/csi_ic_splash_screen"/>

    <TextView
        android:id="@+id/member_name"
        style="@style/member_textview"
        android:ems="10"
        android:text="Name"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@+id/member_pic" />

    <TextView
        android:id="@+id/member_post"
        style="@style/member_textview"
        android:text="Post"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/member_name"
        app:layout_constraintLeft_toLeftOf="@+id/member_name" />

    <TextView
        android:id="@+id/member_year"
        style="@style/member_textview"
        android:text="Year"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/member_post"
        app:layout_constraintLeft_toLeftOf="@+id/member_name" />

</android.support.constraint.ConstraintLayout>
