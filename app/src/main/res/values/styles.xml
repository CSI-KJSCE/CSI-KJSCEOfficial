<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- custom font for the entire app -->
        <item name="fontFamily">@font/saira_condensed_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="progressbar_view" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:progress">20</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>

    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">@font/saira_condensed_semibold</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="LargeTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/titleLargeText</item>
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">@font/saira_condensed_regular</item>
    </style>

    <style name="BodyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bodyText</item>
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">@font/saira_condensed_regular</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="FooterTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/titleLargeText</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:fontFamily">@font/saira_condensed_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">@font/saira_condensed_regular</item>
    </style>

    <style name="TinyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tinyText</item>
        <item name="android:textColor">@color/colorRegularText</item>
        <item name="android:fontFamily">@font/saira_condensed_light</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/saira_condensed_regular</item>
    </style>

    <style name="TagSmallTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tinyText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/saira_condensed_semibold</item>
    </style>

    <style name="TagBigTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/regularText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/saira_condensed_semibold</item>
    </style>

    <style name="TitleLightTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/saira_condensed_semibold</item>
    </style>

</resources>
